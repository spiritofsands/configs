# This file has been auto-generated by i3-config-wizard(1).
# It will not be overwritten, so edit it as you like.
#
# Should you change your keyboard layout some time, delete
# this file and re-run i3-config-wizard(1).
#

# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $alt Mod1
set $ctrl Control

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:DejaVu Sans Mono %FONT_SIZE%

# disable frames
default_border none
hide_edge_borders smart

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# lock screen
bindsym $ctrl+$alt+l exec --no-startup-id ~/bin/lock.sh

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+space exec --no-startup-id dmenu_run -fn "DejaVu Sans Mono-%FONT_SIZE%"
#FIXME path
bindsym $mod+v exec --no-startup-id ~/.local/bin/clipmenu -fn "DejaVu Sans Mono-%FONT_SIZE%"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+backslash split h

# split in vertical orientation
bindsym $mod+minus split v

# enter fullscreen mode for the focused container
bindsym $mod+Shift+z fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+t layout tabbed
bindsym $mod+Shift+p layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Tab focus mode_toggle

# focus the parent container
#bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+q workspace 4
bindsym $mod+w workspace 5
bindsym $mod+e workspace 6

# move focused container to workspace
bindsym $ctrl+$alt+1 move container to workspace 1
bindsym $ctrl+$alt+2 move container to workspace 2
bindsym $ctrl+$alt+3 move container to workspace 3
bindsym $ctrl+$alt+q move container to workspace 4
bindsym $ctrl+$alt+w move container to workspace 5
bindsym $ctrl+$alt+e move container to workspace 6

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+Escape restart
# exit i3 (logs you out of your X session)
bindsym $ctrl+$alt+Delete exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 1 px or 1 ppt
        bindsym j resize grow height 1 px or 1 ppt
        bindsym k resize shrink height 1 px or 1 ppt
        bindsym l resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks
        workspace_buttons no
}

# volume
bindsym $mod+Up exec --no-startup-id pactl set-sink-volume $(pactl list short sinks | head -c1) +5%
bindsym $mod+Down exec --no-startup-id pactl set-sink-volume $(pactl list short sinks | head -c1) -5%
bindsym $mod+Shift+Delete exec --no-startup-id pactl set-sink-mute $(pactl list short sinks | head -c1) toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $(pactl list short sinks | head -c1) +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $(pactl list short sinks | head -c1) -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $(pactl list short sinks | head -c1) toggle

#brightness
bindsym $mod+Left exec --no-startup-id xbacklight -dec 5 -fps 30
bindsym $mod+Right exec --no-startup-id xbacklight -inc 5 -fps 30
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 -fps 30
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5 -fps 30

# autostart
#exec --no-startup-id xrandr --output eDP-1 --off
#exec --no-startup-id nm-applet
exec --no-startup-id redshift
exec --no-startup-id kbdd
exec --no-startup-id parcellite --no-icon
exec --no-startup-id reconnect-vpn.sh
exec --no-startup-id compton
exec --no-startup-id thunderbird
exec --no-startup-id udiskie -q -C -N -T -F
exec --no-startup-id clipnotify
exec --no-startup-id clipmenud
exec --no-startup-id sh -c 'sleep 1s && feh --randomize --bg-fill ~/wall/*'
exec --no-startup-id sh -c 'sleep 1s && keynav'

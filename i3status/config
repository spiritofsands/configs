# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "%essid %quality %ip"
        format_down = "Wifi"
        color_good = "#FFFFFF"
}

ethernet _first_ {
        format_up = "Eth"
        format_down = "No eth"
        color_bad = "#FFFFFF"
}

battery all {
        format = "Bat: %percentage %remaining"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted"
        device = "pulse"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%A, %B %e, %H:%M"
}

disk "/" {
        format = "/: %avail"
        low_threshold =  5
        format_below_threshold = "Low space: %percentage_avail"
}
